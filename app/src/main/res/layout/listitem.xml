<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="60dp"
            card_view:cardCornerRadius="10dp"
        android:layout_marginStart="@dimen/cardview_default_radius"
            android:layout_margin="4dp"
        card_view:cardBackgroundColor="#EBECF0"
            android:foreground="?selectableItemBackground"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:clipToPadding="true"

        android:layout_marginLeft="0dp">


        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageContact"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/photo"

                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textName"
                android:layout_toRightOf="@id/imageContact"
                tools:text="Contact Name"
                android:textSize="14sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="65dp" android:layout_toEndOf="@+id/imageContact"
                android:layout_marginStart="68dp"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textNumber"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/textName"
                android:layout_toRightOf="@+id/imageContact"
                tools:text="Contact Number"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="31dp"
                android:layout_marginLeft="160dp" android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/imageCozntact" android:layout_marginStart="155dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <View
            android:background="#00008B"
            android:layout_width = "2dip"
            android:layout_height="match_parent"
            android:layout_marginTop="33dp"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textName"
                android:layout_marginTop="31dp"
                android:layout_marginLeft="65dp"
                android:layout_toRightOf="@+id/textNumber"
                tools:text="Type of Contact"
                android:textColor="#880044"
                android:textStyle="italic"
                android:id="@+id/textTypeofContact"
                android:textSize="14sp" android:layout_marginStart="68dp" android:layout_toEndOf="@+id/textNumber"/>

    </android.support.v7.widget.CardView>
</RelativeLayout>
